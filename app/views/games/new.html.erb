<div class="container">
  <h1>New Game</h1>
  <div class="word-grid">
    <% @grid.each do |letter| %>
    <%= content_tag(:div, content_tag(:h2, letter), class: "letter-box") %>
    <% end %>
  </div>
  <form action="/score" method="post" class="input-group mb-3">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input type="hidden" name="grid" value="<%= @grid %>">
    <input class="form-control" type="text" name="word" placeholder="What is the longest word you can find?">
    <div class="input-group-append">
      <input class="input-group-text" type="submit" value="Play">
    </div>
  </form>
</div>

